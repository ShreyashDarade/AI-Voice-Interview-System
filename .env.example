# =============================================================================
# AI INTERVIEWER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your values

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================

# SECRET_KEY - REQUIRED in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================

# Gemini API Key - REQUIRED
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Gemini model to use
GEMINI_MODEL=gemini-2.5-flash-native-audio-preview-12-2025

# Voice name for AI interviewer
GEMINI_VOICE_NAME=Aoede

# Connection settings
GEMINI_CONNECTION_TIMEOUT=30
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY=2.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# INTERVIEW CONFIGURATION
# =============================================================================

# Maximum interview duration (minutes)
INTERVIEW_MAX_DURATION_MINUTES=60

# Session timeout (minutes)
INTERVIEW_SESSION_TIMEOUT_MINUTES=90

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================

# Voice Activity Detection thresholds
VAD_ENERGY_THRESHOLD=0.025
VAD_ZCR_THRESHOLD=0.15
VAD_SPEECH_FRAMES=5
VAD_SILENCE_FRAMES=12

# Noise suppression
NOISE_SUPPRESSION_ENABLED=True

# Audio buffer limits
AUDIO_MAX_BUFFER_SIZE_MB=50
AUDIO_CLEANUP_INTERVAL_SECONDS=30

# =============================================================================
# ANTI-CHEATING CONFIGURATION
# =============================================================================

# Maximum strikes before termination
MAX_STRIKES=2

# Confidence threshold for cheating detection (0.0-1.0)
CHEATING_CONFIDENCE_THRESHOLD=0.6

# Check interval (seconds)
CHEATING_CHECK_INTERVAL=1.0

# Feature toggles
CHEATING_TAB_SWITCH_ENABLED=True
CHEATING_FACE_DETECTION_ENABLED=True

# =============================================================================
# PERFORMANCE & RESOURCE LIMITS
# =============================================================================

# Maximum concurrent interviews
MAX_CONCURRENT_INTERVIEWS=50

# Database query timeout (seconds)
DATABASE_QUERY_TIMEOUT_SECONDS=30

# File size limits
MAX_RESUME_SIZE_MB=10
MAX_AUDIO_CHUNK_SIZE_KB=256

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Enable health checks
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_GEMINI_API=True

# =============================================================================
# DATA RETENTION & CLEANUP
# =============================================================================

# Data retention period (days)
DATA_RETENTION_DAYS=90

# Auto-cleanup enabled
CLEANUP_ENABLED=True

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=True
METRICS_INTERVAL_SECONDS=60

# Application version
APP_VERSION=1.0.0
